{
	"name": "wordpress-theme-starter-pack",
	"version": "1.0.0",
	"description": "A starter pack for create a new Wordpress Theme based on Bootstrap 4 and Gulp",
	"main": "gulpfile.js",
	"scripts": {
		"start": "docker compose up -d",
		"stop": "docker compose down",
		"serve": "docker compose up -d && npx mix watch",
		"watch": "npx mix watch",
		"build": "npx mix --production",
		"hot": "npx mix watch --hot"
	},
	"repository": {
		"type": "git",
		"url": "git+https://andrearufo@github.com/andrearufo/wordpress-theme-starter-pack.git"
	},
	"author": "andrearufo",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/andrearufo/wordpress-theme-starter-pack/issues"
	},
	"homepage": "https://github.com/andrearufo/wordpress-theme-starter-pack#readme",
	"devDependencies": {
		"bootstrap": "^5.0.0-beta1",
		"browser-sync": "^2.26.14",
		"browser-sync-webpack-plugin": "^2.3.0",
		"laravel-mix": "^6.0.18",
		"postcss": "^8.1",
		"resolve-url-loader": "^3.1.2",
		"sass": "^1.32.11",
		"sass-loader": "^11.0.1"
	},
	"dependencies": {
		"@popperjs/core": "^2.9.2"
	}
}
